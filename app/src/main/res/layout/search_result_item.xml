<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lbrong="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="7dp"
        android:paddingLeft="7dp"
        android:paddingTop="12dp"
        android:textColor="@color/title_font_gray"
        android:textSize="15sp" />

    <com.toly1994.tolymusic.widget.MusicItem
        android:id="@+id/mi_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:visibility="gone"
        lbrong:showLine="true" />

    <com.toly1994.tolymusic.widget.MusicItem
        android:id="@+id/mi_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:visibility="gone"
        lbrong:showLine="true" />

    <com.toly1994.tolymusic.widget.MusicItem
        android:id="@+id/mi_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:visibility="gone"
        lbrong:showLine="false" />

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        layout="@layout/more_item"
        android:visibility="gone" />

</LinearLayout>