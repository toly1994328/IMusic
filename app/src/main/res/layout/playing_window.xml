<?xml version="1.0" encoding="utf-8"?><RelativeLayout        xmlns:android="http://schemas.android.com/apk/res/android"        xmlns:app="http://schemas.android.com/apk/res-auto"        android:foreground="?android:attr/selectableItemBackground"        android:layout_width="match_parent"        android:layout_height="60dp"        android:orientation="horizontal"        android:background="@color/white"        app:layout_constraintBottom_toBottomOf="parent">    <com.toly1994.tolymusic.widget.ProgressView            android:id="@+id/id_pv_pre"            android:layout_width="match_parent"            android:layout_height="3dp"            android:background="@color/colorLine"            app:z_bar_color="@color/colorPrimary"/>    <ImageView            android:id="@+id/iv_playing_window_cover"            android:layout_width="60dp"            android:layout_height="wrap_content"            android:layout_centerVertical="true"            android:padding="@dimen/default_padding"            android:src="@mipmap/icon_default"/>    <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerVertical="true"            android:layout_toRightOf="@id/iv_playing_window_cover"            android:orientation="vertical">        <TextView                android:id="@+id/tv_playing_window_songname"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="勇气"                android:textColor="@color/colorDefaultText"                android:textSize="@dimen/default_text_size"/>        <TextView                android:id="@+id/tv_playing_window_singer"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="葛强丽"                android:textColor="@color/colorDefaultSubText"                android:textSize="@dimen/default_sub_text_size"/>    </LinearLayout>    <com.toly1994.tolymusic.widget.AlphaImageView            android:id="@+id/iv_playing_window_flag"            android:layout_width="@dimen/default_icon_size"            android:layout_height="@dimen/default_icon_size"            android:layout_centerVertical="true"            android:layout_margin="@dimen/default_margin"            android:layout_toLeftOf="@id/iv_playing_window_next"            android:src="@drawable/icon_stop_2"            app:z_toggle_src="@drawable/icon_start_2"    />    <com.toly1994.tolymusic.widget.AlphaImageView            android:id="@+id/iv_playing_window_next"            android:layout_width="@dimen/default_icon_size"            android:layout_height="@dimen/default_icon_size"            android:layout_centerVertical="true"            android:layout_margin="@dimen/default_margin"            android:layout_toLeftOf="@id/id_iv_pre_list"            android:src="@drawable/icon_next"    />    <com.toly1994.tolymusic.widget.AlphaImageView            android:id="@+id/id_iv_pre_list"            android:layout_width="@dimen/default_icon_size"            android:layout_height="@dimen/default_icon_size"            android:layout_alignParentEnd="true"            android:layout_centerVertical="true"            android:layout_margin="@dimen/default_margin"            android:src="@drawable/icon_music_list"/></RelativeLayout>